PS C:\Windows\system32>
>> try {
>>     # Get the path of the default web browser
>>     $browserPath = (Get-ItemProperty -Path "HKEY_CURRENT_USER\SOFTWARE\Microsoft\Windows\Shell\Associations\UrlAssociations\http\UserChoice" -Name "Progid").Progid
>> } catch {
>>     Write-Host "Error: Unable to find the registry key"
>>     exit
>> }
>>
>> # Check if the Windows Sandbox feature is installed
>> if (!(Get-WindowsOptionalFeature -Online -FeatureName "Containers-DisposableClient")) {
>>     Write-Host "Error: Windows Sandbox feature is not installed on the system"
>>     exit
>> }
>>
>> # Get the current user's profile directory
>> $profilePath = [Environment]::GetFolderPath("UserProfile")
>>
>>
>> # Create a sandbox configuration file
>> try {
>>     $profilePath = [Environment]::GetFolderPath("UserProfile")
>>     New-Item -ItemType File -Path "$profilePath\WindowsSandbox.exe" -Force | Out-Null
>>     Add-Content -Path "$profilePath\WindowsSandbox.exe" -Value '<SandboxConfiguration>'
>>     Add-Content -Path "$profilePath\WindowsSandbox.exe" -Value '    <MappedFolders>'
>>     Add-Content -Path "$profilePath\WindowsSandbox.exe" -Value '    </MappedFolders>'
>>     Add-Content -Path "$profilePath\WindowsSandbox.exe" -Value '</SandboxConfiguration>'
>> } catch {
>>     Write-Host "Error: Unable to create the sandbox configuration file"
>>     exit
>> }
>>
>> # Get the path of the default web browser
>> $shell = New-Object -ComObject WScript.Shell
>> $browserPath = $shell.RegRead(Get-ItemProperty -Path "HKEY_CURRENT_USER\SOFTWARE\Microsoft\Windows\Shell\Associations\UrlAssociations\http\UserChoice" -Name "Progid")
>> $browserPath = $shell.RegRead("HKLM:\SOFTWARE\Classes\" + $browserPath + "\shell\open\command\")
>> $browserPath = $browserPath.Replace("""%1""","")
>> $browserPath = $browserPath.Trim()
>>
>> # Launch the web browser inside the Windows Sandbox using the configuration file
>> Start-Process "C:\Windows\System32\wsb.exe" -ArgumentList "-UseConfig $profilePath\WindowsSandbox.exe"
>> Start-Process $browserPath
