# Create a shortcut to launch the Windows Sandbox
$wsShortcut = New-Object -ComObject WScript.Shell
$shortcut = $wsShortcut.CreateShortcut("C:\Users\$env:USERNAME\Desktop\Windows Sandbox.lnk")
$shortcut.TargetPath = "C:\Windows\System32\WsRun64.exe"
$shortcut.Save()

# Create a shortcut to launch the web browser
$browserShortcut = New-Object -ComObject WScript.Shell
$shortcut = $browserShortcut.CreateShortcut("C:\Users\$env:USERNAME\Desktop\Browser.lnk")
$shortcut.TargetPath = "C:\path\to\browser.exe"
$shortcut.Save()

# Modify the shortcut to launch the web browser inside the sandbox
$browserShortcut.CreateShortcut("C:\Users\$env:USERNAME\Desktop\Browser.lnk").Arguments = "&& start C:\Users\$env:USERNAME\Desktop\Windows Sandbox.lnk"
